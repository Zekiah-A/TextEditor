<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:TextEditorAvalonia.ViewModels"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="TextEditorAvalonia.Views.MainWindow"
		Icon="/Assets/texteditor-logo.ico"
		Height="576" Width="1024" MinHeight="576" MinWidth="1024" WindowStartupLocation="CenterScreen"
		Title="TextEditorAvalonia" ExtendClientAreaToDecorationsHint="True">
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid ColumnDefinitions="Auto *" RowDefinitions="Auto *">
		<Grid Grid.Column="1" RowDefinitions="0" IsHitTestVisible="False"/>

		<StackPanel VerticalAlignment="Center" Orientation="Horizontal" Spacing="5" Margin="7.5 0 0 0" Grid.Column="0" Grid.Row="0">
			<Image Source="/Assets/texteditor-logo.ico" Width="16" Height="16"></Image>

			<!--File menu-->
			<Menu>
				<MenuItem Header="_File">
					<MenuItem Header="Open F_older"></MenuItem>
					<MenuItem Header="Open F_ile"></MenuItem>
					<Separator></Separator>
					<MenuItem Header="S_ave"></MenuItem>
				</MenuItem>
			</Menu>

			<!--Settings menu-->
			<Menu>
				<MenuItem Header="_Settings">

					<!--Not functional yet-->
					<MenuItem Header="_Theme">
						<ToggleSwitch  OnContent="Light" OffContent="Dark"></ToggleSwitch>
					</MenuItem>

					<MenuItem Header="_GitHub"></MenuItem>
					<Separator></Separator>
					<MenuItem Header="_Exit"></MenuItem>
				</MenuItem>
			</Menu>
		</StackPanel>

		<Label Content="Unnamed" VerticalAlignment="Center" HorizontalAlignment="Center"
			   Grid.ColumnSpan="2" IsHitTestVisible="False"></Label>

		<!--Responsible for showing the text editor view-->
		<ContentControl IsVisible="False" Content=""></ContentControl>
	</Grid>
</Window>
